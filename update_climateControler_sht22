sudo docker run --rm -v "$PWD":/repo -w /repo alpine/git reset --hard && sudo docker run --rm -v "$PWD":/repo -w /repo alpine/git pull origin main

cd ./pi_readDHT

sudo docker run --rm \
  --privileged \    
  --device /dev/mem:/dev/mem \    
  --device /dev/gpiomem:/dev/gpiomem \
  -v "$PWD":/workspace \
  -w /workspace \
ubuntu bash -c "apt update && apt install -y build-essential sudo && rm pi_readDHT.o && make"

cd ../
cd ./serviceFiles
sudo ./setup_readDHT22_service.sh
